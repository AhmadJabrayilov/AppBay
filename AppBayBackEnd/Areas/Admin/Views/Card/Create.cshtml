@model Card
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
         <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label asp-for="CardIcon">Icon</label>
                      <input  asp-for="CardIcon"  placeholder="Icon">
                      <sapan class="text-danger"  asp-validation-for="IconPath"></sapan>
                    </div>
                    <div class="form-group">
                      <label asp-for="CardTitle" >Title</label>
                      <input asp-for="CardTitle" placeholder="Title">
                      <sapan class="text-danger"  asp-validation-for="CardTitle"></sapan>

                    </div>
                    <div class="form-group">
                      <label asp-for="CardDesc">Description</label>
                      <input  asp-for="CardDesc" placeholder="Description">
                      <sapan class="text-danger"  asp-validation-for="Description"></sapan>

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Card" asp-action="Index">Back</button>
                  </form>
    </div>
</div>

